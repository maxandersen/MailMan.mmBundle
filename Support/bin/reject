#/bin/bash

ACTION=`defaults read com.freron.MailMate MmMailManCommandAction 2>/dev/null`
if [ -z "${ACTION}" ]; then
	ACTION="openMessage"
fi

cat << END
{ actions = (
		{
			type = replyMessage;
			subpart = "3.1";
			headers = {
				"#posting-style" = "top";
				"#signature" = "";
				"from" = "${MM_TO}";
			};
			resultActions = (
				{
					type = "${ACTION}";
				}
			);
		},
	);
}
END
